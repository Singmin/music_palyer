/* pages/zhuanji/zhuanji.wxss */

.banners{
  margin-top: 5rpx;
  width: 95%;
  height: 300rpx;
  margin-left: 2.5%;
  margin-bottom: 10rpx;
  border-radius: 30rpx;
}

.banners image{
  width: 100%;
  height: 100%;
  border-radius: 30rpx;
}

.navContainer{
  display: flex;
  border-radius: 30rpx;
}

.navItem{
  display: flex;
  flex-direction: column;
  align-items: center;
  color: #515151;
  width: 20%;
}
/* 矢量图 */
.navItem .iconfont{
  width: 90rpx;
  height: 90rpx;
  border-radius: 50%;
  text-align: center;
  line-height: 100rpx;
  background: linear-gradient(to right bottom,rgb(243, 213, 221),#9eccdb);
  font-size: 50rpx;
  color: rgba(255, 255, 255, 0.678);
  margin: 20rpx 0;
}

.navItem text{
  font-size: 26rpx;
}

.CDIMG{
  width: 210rpx;
  height: 210rpx;
  margin: 2.5%;
  border-radius: 10%;
}

.biaoti{
  display: flex;
  flex-direction: row;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  margin-left: 3%;
  font-family: pingfang SC;
  font-weight: bold;
  color:#515151;
}

/* 排行榜 */
.topList{
  padding: 20rpx;
}
.topListSwiper{
  height: 440rpx;
}
.swiperItem{
  width: 95%;
  background-color: rgba(178, 231, 235, 0.178);
  border-radius: 10rpx;
}
.swiperItem .title{
  font-size: 30rpx;
  line-height: 80rpx;
  padding-left: 10rpx;
  font-family: pingfang SC;
  font-weight: bolder;
  color: #717171;
}
.musicItem{
  /* 一个元素为flex，子元素自动变成block */
  display: flex;
}
.musicItem image{
  width: 100rpx;
  height: 100rpx;
  margin-bottom: 20rpx;
  border-radius: 6rpx;
  padding-left: 10rpx;
}
.musicItem .count{
  width: 100rpx;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
}
.musicItem .musicName{
  height: 100rpx;
  line-height: 100rpx;
  max-width: 400rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}


.playlist-info-singer {
  color: #888;
}

.playlist-controls {
  font-size: 10pt;
  margin-right: 20rpx;
  color: #c25b5b;
}

.player {
  display: flex;
  align-items: center;
  background: #222;
  border-top: 1px solid #252525;
  height: 112rpx;
}

.player-cover {
  width: 80rpx;
  height: 80rpx;
  margin-left: 15rpx;
  border-radius: 8rpx;
  border: 1px solid #333;
}

.player-info {
  flex: 1;
  font-size: 10pt;
  line-height: 38rpx;
  margin-left: 20rpx;
  padding-bottom: 8rpx;
}

.player-info-singer {
  color: #888;
}

.player-controls image {
  width: 80rpx;
  height: 80rpx;
  margin-right: 15rpx;
}

.tuijian{
  display: flex;
  flex-direction: row;
  margin-bottom: 10rpx;
  font-family: pingfang SC;
  font-weight: bold;
  color:#515151;
}
