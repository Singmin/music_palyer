<!-- 标签页标题 -->

<!-- 内容区域 -->
<view class="content">
  <swiper current="{{item}}" bindchange="changeTab">
    <swiper-item>
      <!-- 内容滚动区域 -->
      <scroll-view class="content-info" scroll-y>
        <!-- 轮播图 -->
        <swiper class="content-info-slide" indicator-color="rgba(255,255,255,.5)" indicator-active-color="#fff" indicator-dots circular autoplay>
          <swiper-item>
            <image src="https://p1.music.126.net/bxGdoSq6nbRkQFWobVcCpA==/109951166542247746.jpg?imageView&quality=89" />
          </swiper-item>
          <swiper-item>
            <image src="https://p1.music.126.net/y5rLrtBttfazHiqmlQkH7Q==/109951166541705864.jpg?imageView&quality=89" />
          </swiper-item>
          <swiper-item>
            <image src="https://p1.music.126.net/UqeC0PlwLrDkNY-hH4iQIg==/109951166542272522.jpg?imageView&quality=89" />
          </swiper-item>
        </swiper>
        <!-- 功能按钮 -->
        <view class="content-info-portal">
          <view>
            <image src="/images/rili.png" />
            <text>每日推荐</text>
          </view>
          <view>
            <image src="/images/FM.png" />
            <text>私人FM</text>
          </view>
          <view>
            <image src="/images/mp.png" />
            <text>歌单</text>
          </view>
          <view>
            <image src="/images/phb.png" />
            <text>排行榜</text>
          </view>
          <view>
            <image src="/images/xgphb.png" />
            <text>云音乐新歌榜</text>
          </view>
        </view>
        <!-- 热门音乐 -->
        <view class="content-info-list">
          <view class="list-title">推荐歌曲</view>
          <view class="list-inner">
            <view class="list-item">
              <image src="https://p3.music.126.net/0gLnuwT8YZdX81yRMxeA-Q==/19132601835513840.jpg?param=200y200" />
              <view>我的快乐时代</view>
            </view>
            <view class="list-item">
              <image src="https://p2.music.126.net/LFYMQx5W4XEs54XPHnVVtQ==/109951163936061074.jpg?param=130y130" />
              <view>哪里只得我共你</view>
            </view>
            <view class="list-item">
              <image src="https://p2.music.126.net/TAx-0KnSlDiUa82t_BhWNA==/109951165076721097.jpg?param=177y177" />
              <view>哀的美敦书</view>
            </view>
            <view class="list-item">
              <image src="https://p2.music.126.net/utkOaUcDopctzpGQuK4xnw==/109951163721888538.jpg?param=177y177" />
              <view>无尽</view>
            </view>
            <view class="list-item">
              <image src="https://p1.music.126.net/kG-NvLv1neNskeSBVYuOew==/109951164194813096.jpg?param=177y177" />
              <view>2084</view>
            </view>
            <view class="list-item">
              <image src="https://p1.music.126.net/VrIg_26N3Eb7Cp2p1WC7Gw==/109951164628501574.jpg?param=177y177" />
              <view>PS.I LOVE YOU</view>
            </view>
          </view>
        </view>
      </scroll-view>
    </swiper-item>
    <swiper-item>
      <!-- 播放器页面 -->
      <include src="play.wxml" />
    </swiper-item>
    <swiper-item>
      <include src="playlist.wxml" />
    </swiper-item>
    <swiper-item>
      <include src="me.wxml" />
    </swiper-item>
  </swiper>
</view>
<!-- 底部播放器 -->
<view class="player" bindtap="changepage">
  <image class="player-cover" src="{{play.coverImgUrl}}" />
  <view class="player-info">
    <view class="player-info-title">{{play.title}}</view>
    <view class="player-info-singer">{{play.singer}}</view>
  </view>
  <view class="player-controls">
    <!-- 切换到播放列表 -->
    <image src="/images/01.png" bindtap="changePage" data-page="2" />
    <!-- 播放或暂停 -->
    <image wx:if="{{state=='paused'}}" src="/images/02.png" bindtap="play" />
    <image wx:else src="/images/02stop.png" bindtap="pause" />
    <!-- 下一曲 -->
    <image src="/images/03.png" bindtap="next" />
  </view>
</view>

<view class="tab">
  <view class="tab-item {{tab==0?'active':''}}" bindtap="changeItem" data-item="0">音乐推荐</view>
  <view class="tab-item {{tab==1?'active':''}}" bindtap="changeItem" data-item="1">播放器</view>
  <view class="tab-item {{tab==2?'active':''}}" bindtap="changeItem" data-item="2">播放列表</view>
  <view class="tab-item {{tab==3?'active':''}}" bindtap="changeItem" data-item="3">我的</view>
</view>